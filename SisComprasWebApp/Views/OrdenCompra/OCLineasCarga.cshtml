@model Modelos.OrdenCompraModel

<h2>Lista de Artículos</h2>

<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-6">
            <label class="control-label col-md-8">Artículos cargados a partir del:</label>
        </div>
        <div class="col-md-4">
            <input class="form-control text-box single-line col-md-2" data-val="true" data-val-date="The field Desde must be a date." data-val-required="La fecha de carga desde es obligatoria" id="FechaCargaDesde" name="FechaCargaDesde" type="date" value=now />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-6">
            <label class="control-label col-md-8">Artículos cargados antes del:</label>
        </div>
        <div class="col-md-4">
            <input class="form-control text-box single-line col-md-2" data-val="true" data-val-date="The field Desde must be a date." data-val-required="La fecha de carga hasta es obligatoria" id="FechaCargaHasta" name="FechaCargaHasta" type="date" value=now />
        </div>
        <div class="col-md-2">
            <input type="button" class="form-control btn-success" id="btnCargarArticulos" value="Filtrar" />
        </div>
    </div>
</div>

<hr />

<div class="row">
    <div class="col span_24 anchocol">
        <table id="ordenCompraGrid"></table>
        <div id="ordenCompraPager"></div>
    </div>
</div>

<div id="ordenCompraDialog">
    <div id="ordenCompraDialogTarget"></div>
</div>
