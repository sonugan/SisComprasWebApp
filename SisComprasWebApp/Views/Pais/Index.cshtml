@model System.Data.DataTable

@{
    ViewBag.Title = "Países";
}

<h2>Países</h2>
<table class="table table-bordered table-striped">
    <tr>
        <th>Código</th>
        <th>Nombre</th>
        <th>Activo</th>
        <th>Código AFIP</th>
        <th></th>

    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            @*No muestro PAIS_ID*@
        <td>@Model.Rows[i]["pais_cod"]</td>
        <td>@Model.Rows[i]["pais_nombre"]</td>
        <td>@Model.Rows[i]["flag_activo"]</td>
        <td>@Model.Rows[i]["pais_destino_afip"]</td>
        <td>
            <a href="@Url.Action("Edit", "Pais", new { @id=Model.Rows[i]["pais_id"] })">Editar</a>
            <a href="@Url.Action("Delete", "Pais", new { @id=Model.Rows[i]["pais_id"] })">Eliminar</a>
        </td>
    </tr>
    }

</table>

<a href="@Url.Action("Create","Pais")">Alta de país</a>
